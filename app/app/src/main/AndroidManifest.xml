<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fill_n_go">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fill_n_go"
        tools:targetApi="31">
        <activity
            android:name=".FuelAvailabilityActivity"
            android:exported="false" />
        <activity
            android:name=".AfterPump"
            android:exported="false" />
        <activity
            android:name=".QueueExit"
            android:exported="false" />
        <activity
            android:name=".StationDetails"
            android:exported="false" />
        <activity
            android:name=".UserMain"
            android:exported="false" />
        <activity
            android:name=".SearchStation"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Auth.Login"
            android:exported="false" />
        <activity
            android:name=".Auth.Register"
            android:exported="false" />
    </application>

</manifest>