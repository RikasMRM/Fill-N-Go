<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QueueExit">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/searchBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/exitHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="50px"
                android:layout_marginRight="40px"
                android:gravity="center"
                android:text="Are you sure you want to exit the queue? "
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/exit_before_pump_btn"
                android:layout_width="356dp"
                android:layout_height="82dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15px"
                android:layout_marginTop="100px"
                android:layout_marginEnd="10px"
                android:backgroundTint="#3C3F41"
                android:padding="20px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:text="Yes, I exit before pump :("
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/exit_after_pump_btn"
                android:layout_width="356dp"
                android:layout_height="82dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15px"
                android:layout_marginTop="60px"
                android:layout_marginEnd="10px"
                android:backgroundTint="#3C3F41"
                android:padding="20px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:text="Yes, I exit after pump :)"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>